---
export interface CardProps {
  title: string;
  description: string;
}

const { title, description } = Astro.props as CardProps;
---

<div
  id="card"
  class="w-full shrink-0 bg-teal-primary shadow-lg p-6 rounded-sm snap-center"
>
  <h3 class="text-3xl font-bold mb-2">{title}</h3>
  <p class="text-base line-clamp-3">{description}</p>
</div>
