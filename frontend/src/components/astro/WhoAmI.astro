---
import { Picture } from '@astrojs/image/components';
import Arrow from '../icon/arrow.astro';
const PAYLOAD_PUBLIC_URL = import.meta.env.PAYLOAD_PUBLIC_URL;
---

<section
  class="h-[50dvh] md:h-[65dvh] mb-10 md:mb-20 max-w-5xl md:px-4 lg:px-8 py-4 md:py-6 lg:py-8 items-center justify-center flex flex-col md:flex-row md:justify-evenly mx-auto"
>
  <div class="flex flex-col items-center justify-center h-full gap-y-4 mb-8">
    <h1 class="leading-loose tracking-wide">
      Hi, I'm <span class="text-teal-primary text-5xl font-canela font-bold"
        >Tepy</span
      >
    </h1>
    <div class="relative inline-block w-[260px] mx-auto">
      <span id="frontendText" class="absolute left-0 text-2xl font-bold"
        >Frontend</span
      >
      <span class="absolute left-[106px] top-2 transform -translate-y-1/2">
        <span class="relative">
          <span class="absolute -top-2 text-xs w-full">in progress</span>
          <span class="absolute -top-[2px] left-4"> <Arrow /></span>
        </span>
      </span>
      <span
        class="text-gradient absolute left-40 text-3xl font-bold animate-slide-up"
        >Expert</span
      >
    </div>
  </div>
  <span class="animate-fade-in">
    <Picture
      src={`${PAYLOAD_PUBLIC_URL}/media/profile-1-1024x768.webp`}
      aspectRatio={4 / 5}
      alt="Picture of Tepy Thai"
      widths={[224, 400, 600]}
      sizes="(max-width: 600px) 224px, (max-width: 900px) 400px, 600px"
      class="rounded-full w-56 h-56 mx-auto my-4 object-cover"
    />
  </span>
</section>

<style>
  .text-gradient {
    @apply bg-gradient-to-r from-teal-primary via-yellow-primary to-brass;
    -webkit-background-clip: text;
    color: transparent;
    transition-duration: 0.5s;
  }
  .arrow {
    @apply ml-2 relative;
    width: 20px;
    height: 20px;
    border-top: 2px solid currentColor;
    border-right: 2px solid currentColor;
    transform: rotate(45deg) translateY(-50%);
  }

  .arrow span {
    @apply absolute text-gray-600;
    top: -8px;
    left: 50%;
    transform: translateX(-50%);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const frontendText = document.getElementById('frontendText');

    frontendText.classList.add('text-gradient');
  });
</script>
